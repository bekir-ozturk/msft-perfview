<UserControl x:Class="PerfView.TimelineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:PerfView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel x:Name="DataView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas Name="SummaryCanvas" DockPanel.Dock="Top" Height="90" Background="red"/>
            <ScrollBar DockPanel.Dock="Bottom" Orientation="Horizontal" Minimum="0" Maximum="20000" ViewportSize="5000"/>
            <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
                <Label>Start Time:</Label>
                <TextBox Text="00:00:000" Width="100" VerticalAlignment="Center"/>
                <Label Margin="10,0,0,0">End Time:</Label>
                <TextBox Text="00:09:275" Width="100" VerticalAlignment="Center"/>
            </DockPanel>
            <Canvas Name="FocusCanvas" Background="BlueViolet"/>
        </DockPanel>
        <Label Name="InfoLabel" HorizontalAlignment="Center" VerticalAlignment="Center" d:Visibility="Collapsed" >Failed to load</Label>
    </Grid>
</UserControl>